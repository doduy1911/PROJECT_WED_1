extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    .container.my-3
        .row
            .col-12
                h1(style="color:green") Thông Tin Tài Khoản
        .row
            .col-12
                p strong Tên đầy đủ: 
                span #{user.fullName}
            .col-12
                p strong Email: 
                span #{user.email}
            .col-12
                p strong Token người dùng: 
                span #{user.tokenUser}
            .col-12
                p strong Đã xóa: 
                span #{user.deleted}
            .col-12
                p strong Ngày tạo: 
                span #{user.createdAt.toISOString()}
            .col-12
                p strong Ngày cập nhật: 
                span #{user.updatedAt.toISOString()}
