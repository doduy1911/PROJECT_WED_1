extends ../../layouts/default.pug
include ../../mixins/alert.pug
//- include ../../mixins/select-tree.pug

block main
    +alert-error(5000)
    h1(class="mb-4") Thêm Mới Một Tài Khoản
    form(action=`/${prefix}/account/create` method="POST" enctype="multipart/form-data" class="smail_form")
        div(class="form-group")
            label(for="fullname") Tên Người Dùng
            input(type="text"
            class="form-control"
            id="fullname"
            name="fullname"
            required)
        div(class="form-group")
            label(for="email") Email
            input(type="email"
            class="form-control"
            id="email"
            name="email"
            required)
        div(class="form-group")
            label(for="password") Mật Khẩu
            input(type="password"
            class="form-control"
            id="password" 
            name="password"
            required)
        div(class="form-group")
            label(for="phone") Số Điện Thoại
            input(type="number"
            class="form-control"
            id="phone"
            name="phone"
            )
        
        div(class="form-group" upload-image)
            label(for="avatar") Ảnh
            input(type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )

        div(class="form-group")
            label(for="role_id") Phân Quyền 
            select(name="role_id" id="role_id" 
            class="form-control")
                option(disabled) --Chọn--
                each item in roles
                    option(value=item.id) #{item.title}

        div(class="form-group form-checck form-check-inline")
            input(type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            ) 
            label(for="statusInActive" class="form-check-label") Hoạt Động
        div(class="form-group form-checck form-check-inline")
            input(type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="inactive"
            ) 
            label(for="statusInActive" class="form-check-label") Dừng Hoạt Động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo Mới
