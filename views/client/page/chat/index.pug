extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    .container.my-3
        .row 
            .col-12
                h1 Chat
        .row 
            .col-12 
                .chat(my-id = user.id) 
                    //- .inner-head 
                    //-     .inner-avatar EY
                    //-     .inner-name EM Yêu
                    .inner-body
                        each chat in chats
                            div(class=(chat.infoUser.id == user.id ? "inner-outgoing " : "inner-incoming"))
                                if(chat.infoUser.id != user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                .inner-content 
                                    | #{chat.content}
                    .inner-foot 
                        form(
                            action=""
                            class="inner-form"
                            ) 
                            input(
                                type="text"
                                placeholder = "Nhập Nội Dung ..."
                                name= "content"
                            )
                            button 
                                i.fa-solid.fa-paper-plane
    emoji-picker