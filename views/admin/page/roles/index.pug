extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    h1(class="mb-4") Nhóm Quyền 
    .card.mb-3 
     .card-header Danh Sách
     .card-body 
        .row 
            .col-8 
            .col-4.text-right 
                a(href=`/${prefix}/roles/create`
                class="btn btn-outline-success"
                ) Thêm Mới 

            table(class="table table-hover table-sm")  
                thead 
                    tr 
                        th STT 
                        th Nhóm Quyền 
                        th Mô tả
                        th Hành Động
                tbody 
                    if(records.length > 0 )
                        each item ,index in records 
                            tr 
                                td #{index + 1 }
                                td #{item.title}
                                td #{item.description}
                                td 
                                    a(href=``
                                    class="btn btn-secondary btn-sm"
                                    ) Chi Tiết 
                                    a(href=`/${prefix}/roles/edit/${item.id}`
                                    class="btn btn-warning btn-sm ml-1"
                                    ) Sửa 
                                    a(href=`/${prefix}/roles/delete/${item.id}`
                                    class="btn btn-danger btn-sm ml-1"
                                    ) Xóa 
                    else 
                        tr 
                            td(colspan="4" class="text-center") Chưa Có Nhóm Quyền Nào
    

    
                        
                    

                    
    