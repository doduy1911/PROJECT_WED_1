include ../mixins/sub-menu.pug
header.header 
    .container 
        .row.align-items-center 
            .col-2
                .inner-logo 
                    a(href="/")
                        img(src="/client/images/logo.svg", alt="")
            .col-3
                form(
                    action="/search",
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập Từ Khóa ..."
                            class="form-control"
                            name="keyword"
                            id="keyword"
                            value=keyword
                        )
                        button(
                            class="btn btn-primary"
                            type="submit"
                        ) Tìm

            .col-7
                .inner-menu 
                    ul 
                        li  
                            a(href="/") Trang chủ 
                        li(class="sub-menu") 
                            - const pathProduct = "/product"
                            a(href=pathProduct) Sản Phẩm  
                            if(layoutCategoryProduct)
                                +sub-menu(layoutCategoryProduct,"/product")   
                        li  
                            a(href="/likeProduct") Sản Phẩm Yêu Thích 
                        li  
                            a(href="/cart") Giỏ Hàng (#{minicart.totalQuantity})             
                        li  
                            a(href="/user/loign") Đăng Nhập 
                        //- div #{user}
                        